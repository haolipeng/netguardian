@PACKAGE_INIT@

# NetGuardian CMake configuration file

set(NetGuardian_VERSION @PROJECT_VERSION@)

# Include targets
include("${CMAKE_CURRENT_LIST_DIR}/NetGuardianTargets.cmake")

# Set variables
set(NetGuardian_INCLUDE_DIRS "@PACKAGE_CMAKE_INSTALL_INCLUDEDIR@/netguardian")
set(NetGuardian_LIBRARIES netguardian_core netguardian_utils netguardian_bridge)

# Add optional components
if(@ENABLE_SNORT_INTEGRATION@)
    list(APPEND NetGuardian_LIBRARIES netguardian_snort)
    set(NetGuardian_SNORT_FOUND TRUE)
endif()

if(@ENABLE_ZEEK_INTEGRATION@)
    list(APPEND NetGuardian_LIBRARIES netguardian_zeek)
    set(NetGuardian_ZEEK_FOUND TRUE)
endif()

check_required_components(NetGuardian)
